<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="eb.plant_uml_bundle.drawer.plantuml" class="EB\PlantUMLBundle\Drawer\PlantUML">
            <argument type="service" id="filesystem"/>
            <argument>%eb.plant_uml_bundle.java%</argument>
        </service>
        <service id="eb.plant_uml_bundle.drawer.twig_drawer" class="EB\PlantUMLBundle\Drawer\TwigDrawer">
            <argument type="service" id="eb.plant_uml_bundle.drawer.plantuml"/>
            <argument type="service" id="kernel"/>
            <argument type="service" id="filesystem"/>
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
        </service>
        <service id="eb.plant_uml_bundle.drawer.doctrine_drawer" class="EB\PlantUMLBundle\Drawer\DoctrineDrawer">
            <argument type="service" id="eb.plant_uml_bundle.drawer.plantuml"/>
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
        </service>
        <service id="eb.plant_uml_bundle.drawer.validator_drawer" class="EB\PlantUMLBundle\Drawer\ValidatorDrawer">
            <argument type="service" id="eb.plant_uml_bundle.drawer.plantuml"/>
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <argument type="service" id="validator"/>
        </service>
    </services>
</container>
